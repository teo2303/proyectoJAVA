<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.ClaseController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding><Insets bottom="12" left="12" right="12" top="12" /></padding>
            <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Gestión de Clases - Gym" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#abrirDialogoNuevoHorario" text="Nuevo horario" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <SplitPane dividerPositions="0.55">
                <items>

                    <!-- Izquierda: tabla de clases -->
                    <AnchorPane>
                        <children>
                            <TableView fx:id="classesTable" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
                                <columns>
                                    <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                                    <TableColumn fx:id="colNombre" prefWidth="180" text="Nombre" />
                                    <TableColumn fx:id="colCupo" prefWidth="80" text="Cupo" />
                                    <TableColumn fx:id="colUsuario" prefWidth="90" text="Usuario" />
                                </columns>
                            </TableView>
                        </children>
                    </AnchorPane>

                    <!-- Derecha: formulario -->
                    <VBox spacing="8">
                        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Editar / Nueva Clase" />

                        <GridPane hgap="8" prefHeight="98.0" prefWidth="426.0" vgap="8">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            <children>
                                <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="tfId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="tfNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Cupo:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <Spinner fx:id="spnCupo" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="ID Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                <TextField fx:id="tfIdUsuario" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            </children>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                        </GridPane>

                        <HBox spacing="8">
                            <Button onAction="#onNew" text="Nuevo" />
                            <Button onAction="#onSave" text="Guardar" />
                            <Button onAction="#onDelete" text="Eliminar" />
                            <Pane HBox.hgrow="ALWAYS" />
                            <Button onAction="#onClear" text="Limpiar" />
                        </HBox>

                        <Label fx:id="lblStatus" style="-fx-text-fill: #555;" text="" />
                    </VBox>

                </items>
            </SplitPane>

            <!-- Sección inferior: Turnos -->
            <TitledPane expanded="true" text="Turnos de la clase seleccionada">
                <content>
                    <VBox spacing="10">
                        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

                        <HBox spacing="10">
                            <Label text="Día:" />
                            <ComboBox fx:id="cbDia" />
                            <Label text="Inicio:" />
                            <TextField fx:id="tfHoraInicioH" prefWidth="80" promptText="HH:mm" />
                            <Label text="Fin:" />
                            <TextField fx:id="tfHoraFinH" prefWidth="80" promptText="HH:mm" />
                            <Button onAction="#onAgregarTurno" text="Agregar turno" />
                            <Button onAction="#onEliminarTurno" text="Eliminar turno" />
                        </HBox>

                        <TableView fx:id="horariosTable" prefHeight="180">
                            <columns>
                                <TableColumn fx:id="colDiaH" prefWidth="150" text="Día" />
                                <TableColumn fx:id="colInicioH" prefWidth="120" text="Inicio" />
                                <TableColumn fx:id="colFinH" prefWidth="120" text="Fin" />
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>
