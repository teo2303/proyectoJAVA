<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RegistroClienteController">

    <children>
        <VBox alignment="CENTER" layoutX="20.0" spacing="10" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
            <VBox alignment="CENTER" maxWidth="520.0" prefWidth="520.0" spacing="14.0">
                <padding>
                    <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
                </padding>
            </VBox>
            <Label alignment="CENTER" ellipsisString="" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registro de cliente" textFill="#479ba8ad">
                <VBox.margin>
                    <Insets bottom="12.0" />
                </VBox.margin>
                <font>
                    <Font name="Courier New" size="22.0" />
                </font></Label>

            <TextField fx:id="txtNombre" maxWidth="1.7976931348623157E308" prefHeight="36.0" promptText="Nombre">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin></TextField>
            <TextField fx:id="txtApellido" maxWidth="1.7976931348623157E308" prefHeight="36.0" promptText="Apellido">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin></TextField>
            <TextField fx:id="txtDni" maxWidth="1.7976931348623157E308" prefHeight="36.0" promptText="DNI">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin></TextField>
            <TextField fx:id="txtTelefono" maxWidth="1.7976931348623157E308" prefHeight="36.0" promptText="Teléfono">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin></TextField>
            <TextField fx:id="txtEmail" maxWidth="1.7976931348623157E308" prefHeight="36.0" promptText="Correo electrónico">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin></TextField>

            <Button fx:id="btnRegistrarCliente" onAction="#registrarCliente" text="Registrar Cliente" />
        </VBox>
    </children>
</AnchorPane>
